extends ../../layouts/default.pug

block main
  if(role.title)
    h1(class="mb-4") #{role.title}

  if(role.description)
    p !{role.description}
  if(role.permissions.includes("roles_edit"))
    a(
      class="btn btn-warning"
      href=`/admin/roles/edit/${role.id}`
    ) Chỉnh sửa

  script(src="/admin/js/roles.js")