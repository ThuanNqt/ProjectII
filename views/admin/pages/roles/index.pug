extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  if(role.permissions.includes("roles_view"))
    +alert-success(2000)
    +alert-error(2000)

    h1(class="mb-4") Nhóm quyền

    .card.mb-3
      .card-header Danh sách nhóm quyền
      .card-body
        .row
          .col-8
          .col-4
            if(role.permissions.includes("roles_create"))
              a(
                href=`/admin/roles/create`
                class="btn btn-outline-success mb-3"
              ) + Thêm mới nhóm quyền

        table(
          class="table table-hover table-sm text-center"
        )
          thead
            tr.text-center.align-middle
              th STT
              th Nhóm quyền
              th Mô tả
              th Hành động

          tbody
            if(records.length > 0)
              each item, index in records
                tr
                  td.align-middle #{index + 1}
                  td.align-middle #{item.title}
                  td.align-middle !{item.description}
                  td.align-middle
                    a(
                      href=`/admin/roles/detail/${item.id}`
                      class="btn btn-secondary btn-sm"
                    ) Chi tiết
                    if(role.permissions.includes("roles_edit"))
                      a(
                        href=`/admin/roles/edit/${item.id}`
                        class="btn btn-warning btn-sm ml-1"
                      ) Sửa
                    if(role.permissions.includes("roles_delete"))
                      a(
                        class="btn btn-danger btn-sm ml-1"
                        button-delete
                        data-id=item.id
                      ) Xóa
            else
              tr
                td(colspan="4" class="text-center") Không có dữ liệu

    form(
      action=""
      method="POST"
      id="form-delete-item"
      path=`/admin/roles/delete`
    )

    script(src="/admin/js/role.js")
    script(src="/admin/js/script.js")

  else
    h1(class="mb-4") Bạn không có quyền truy cập trang này
    p Vui lòng liên hệ với quản trị viên để được hỗ trợ