extends ../../layouts/default.pug

block main
  h1(class="mb-4") Chỉnh sửa nhóm quyền

  form(
    action=`/admin/roles/edit/${role.id}?_method=PATCH`
    method="POST"
  )
    //-  Khi gửi cho bên BE thì ta nhận được (name - value của input)
    div(class="form-group")
      label(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
        value=role.title
      )

    div(class="form-group")
      label(for="desc") Mô tả
      textarea(
        class="form-control"
        id="desc"
        name="description"
        rows="5"
        textarea-mce
      ) #{role.description}

    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật
