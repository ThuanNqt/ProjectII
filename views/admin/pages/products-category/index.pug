extends ../../layouts/default.pug
include ../../mixins/filterStatus.pug
include ../../mixins/pagination.pug
include ../../mixins/search.pug

block main
  h1 Danh mục sản phẩm
  .card.mb-3
    .card-header Bộ lọc và tìm kiếm
    .card-body
      .row
        .col-6
          +filterStatus(filterStatus)
        .col-6
          +search(keyword)

  .card.mb-3
    .card-header Danh mục
      .card-body
        .row
          .col-4
            a(
              href=`/admin/products-category/create`
              class="btn btn-outline-success"
              ) + Thêm danh mục

        table(
          class="table table-hover table-sm"
        )
          thead
            tr
              th STT
              th Hình ảnh
              th Tiêu đề
              td Vị trí
              th Trạng thái
              th Hành động
          tbody
            each product, index in records
              tr
                td #{index + 1}
                td
                  img(
                    src=product.thumbnail,
                    alt=product.title,
                    width="100px",
                    height="auto"
                    )
                td #{product.title}
                td
                  input(
                    type="number"
                    value=product.position
                    style="width: 60px; text-align:center; background-color: white"
                    min="1"
                    name="position"
                    disabled
                  )
                td
                  if(product.status === "active")
                    a(
                      href='javascript:;'
                      data-status=product.status
                      data-id=product.id
                      button-change-status
                      class='badge badge-success'
                      ) Hoạt động
                  else
                    a(
                      href='javascript:;'
                      data-status=product.status
                      data-id=product.id
                      button-change-status
                      class='badge badge-danger'
                    ) Dừng doạt động

                td
                  a(
                    href=`/admin/products-category/detail/${product.id}`
                    class="btn btn-secondary btn -sm ml-1"
                    ) Chi tiết
                  a(
                    href=`/admin/products-category/edit/${product.id}`
                    class="btn btn-warning btn -sm ml-1"
                    ) Sửa
                  button(
                    class="btn btn-danger btn -sm ml-1"
                    button-delete
                    data-id=product.id
                    ) Xóa
  +pagination(pagination)

  form(
    action=""
    method="POST"
    id="form-change-status"
    path=`/admin/products-category/change-status`
  )

  form(
    action=""
    method="POST"
    id="form-delete-item"
    path=`/admin/products-category/delete`
  )

  script(src="/admin/js/product-category.js")
  script(src="/admin/js/script.js")

