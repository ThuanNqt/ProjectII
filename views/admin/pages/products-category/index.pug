extends ../../layouts/default.pug
include ../../mixins/filterStatus.pug
include ../../mixins/pagination.pug
include ../../mixins/search.pug
include ../../mixins/table-tree.pug
include ../../mixins/alert.pug

block main
  if(role.permissions.includes("products-category_view"))
    +alert-success(2000)
    +alert-error(2000)

    h1 Danh mục sản phẩm
    .card.mb-3
      .card-header Bộ lọc và tìm kiếm
      .card-body
        .row
          .col-6
            +filterStatus(filterStatus)
          .col-6
            +search(keyword)

    .card.mb-3
      .card-header Danh mục
        .card-body
          .row
            .col-8
            .col-4
              if(role.permissions.includes("products-category_create"))
                a(
                  href=`/admin/products-category/create`
                  class="btn btn-outline-success mb-4"
                  ) + Thêm danh mục

          table(
            class="table table-hover table-sm text-center"
          )
            thead
              tr.align-middle
                th STT
                th Hình ảnh
                th Tiêu đề
                th Vị trí
                th Trạng thái
                th Hành động
            tbody
              +table-tree(records)
    +pagination(pagination)

    form(
      action=""
      method="POST"
      id="form-change-status"
      path=`/admin/products-category/change-status`
    )

    form(
      action=""
      method="POST"
      id="form-delete-item"
      path=`/admin/products-category/delete`
    )

    script(src="/admin/js/product-category.js")
    script(src="/admin/js/script.js")
  else
    h1(class="mb-4") Bạn không có quyền truy cập trang này
    p Vui lòng liên hệ với quản trị viên để được hỗ trợ

