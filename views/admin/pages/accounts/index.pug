extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(2000)
  +alert-success(2000)
  h1(class="mb-4") Danh sách tài khoản

  .card.mb-3
    .card-header Danh sách
    .card-body
      .row
        .col-8
        .col-4
          a(
            href=`/admin/accounts/create`
            class="btn btn-outline-success"
            style="margin-bottom: 10px"
          ) + Tạo mới tài khoản

        table(
        class="table table-hover table-sm"
        checkbox-multi
        )
          thead
            tr
              th STT
              th Avatar
              th Họ tên
              th Phân quyền
              th Email
              th Trạng thái
              th Hành động
          tbody
            each account, index in records
              tr
                td #{index + 1}
                td
                  img(
                    src=account.avatar,
                    alt=account.fullName,
                    width="100px",
                    height="auto"
                    )
                td #{account.fullName}
                td #{account.role.title}
                td #{account.email}
                td
                  if(account.status === "active")
                    a(
                      href='javascript:;'
                      data-status=account.status
                      data-id=account.id
                      button-change-status
                      class='badge badge-success'
                      ) Hoạt động
                  else
                    a(
                      href='javascript:;'
                      data-status=account.status
                      data-id=account.id
                      button-change-status
                      class='badge badge-danger'
                    ) Dừng doạt động

                td
                  a(
                    href=`/admin/accounts/detail/${account.id}`
                    class="btn btn-secondary btn -sm"
                    ) Chi tiết
                  a(
                    href=`/admin/accounts/edit/${account.id}`
                    class="btn btn-warning btn -sm ml-1"
                    ) Sửa
                  button(
                    class="btn btn-danger btn -sm ml-1"
                    button-delete
                    data-id=account.id
                    ) Xóa
  form(
    action=""
    method="POST"
    id="form-delete-item"
    path=`/admin/accounts/delete`
  )

  form(
    action=""
    method="POST"
    id="form-change-status"
    path=`/admin/accounts/change-status`
  )

  script(src="/admin/js/script.js")
  script(src="/admin/js/account.js")