mixin product-item(item)
  .col-3.mb-3
    .product-item
      .inner-image
        img(src=item.thumbnail, alt=item.title)
        if(item.featured == "1")
          .inner-featured Nổi bật
      .inner-content
        h3.inner-title
          a(
            href=`/products/detail/${item.slug}`
          ) #{item.title}
        .inner-price-new #{formatMoney(item.newPrice)}
        .inner-price-old #{formatMoney(item.price)}
        .inner-discount -#{item.discountPercentage}%
