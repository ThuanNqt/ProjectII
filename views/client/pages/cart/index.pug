extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
  +alert-success(2000)
  +alert-error(2000)

  .container.my-5
    .row
      .col-12
        +box-head("Giỏ hàng")

    .row
      .col-12
        table(class="table table-bordered text-center table-hover")
          thead
            tr
              th STT
              td Ảnh
              th Tên sản phẩm
              th Đơn giá
              th Số lượng
              th Thành tiền
              th Hành động
          tbody
            if(cartDetail.products.length > 0)
              each item, index in cartDetail.products
                tr
                  td #{index + 1}
                  td
                    img(src=item.productInfo.thumbnail, alt=item.productInfo.title  width="80px")
                  td
                    a(href=`/products/detail/${item.productInfo.slug}`) #{item.productInfo.title}
                  td #{item.productInfo.newPrice}$
                  td
                    input(
                      type="number"
                      class="form-control"
                      name="quantity"
                      value=item.quantity
                      min="1"
                      max=item.productInfo.stock
                      product_id=item.product_id
                      style="width: 60px"
                    )
                  td #{item.totalPrice}$
                  td
                    a(
                      href=`/cart/delete/${item.product_id}`
                      class="btn btn-danger"
                    ) Xóa
        h3(class="text-right text-success font-weight-bold") Tổng tiền: #{cartDetail.totalPrice}$
        div(class="text-right mt-3")
          a(
            href="/checkout"
            class="btn btn-success"
          ) Thanh toán
  script(src="/js/cart.js")