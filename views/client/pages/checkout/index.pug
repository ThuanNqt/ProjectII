extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
  +alert-success(2000)
  +alert-error(2000)

  .container.my-5
    .row
      .col-12
        +box-head("Đặt hàng")
    .row
      .col-12
        table(class="table table-bordered text-center table-hover")
          thead
            tr
              th STT
              th Ảnh
              th Tên sản phẩm
              th Đơn giá
              th Số lượng
              th Thành tiền
          tbody
            if(cartDetail.products.length > 0)
              each item, index in cartDetail.products
                tr
                  td #{index + 1}
                  td
                    img(src=item.productInfo.thumbnail, alt=item.productInfo.title  width="80px")
                  td #{item.productInfo.title}
                  td #{item.productInfo.newPrice}$
                  td #{item.quantity}
                  td #{item.totalPrice}$
            else
              tr
                td(
                  colspan="7"
                  class="text-center"
                ) Giỏ hàng đang trống
        if(cartDetail.products.length > 0)
          h3(class="text-right text-success font-weight-bold") Tổng tiền: #{cartDetail.totalPrice}$

    .row
      if(cartDetail.products.length > 0)
        .col-6
        .col-6.d-flex.justify-content-end
          button.btn.btn-success.mr-3(type='button' data-toggle='modal' data-target='#myModal1') Thanh toán khi nhận hàng
          .modal(tabindex='-1', id='myModal1')
            .modal-dialog
              .modal-content
                .modal-header
                  h5.modal-title Thông tin người nhận hàng
                  button.close(type='button' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') &times;
                .modal-body
                  form(
                    action="/checkout/order"
                    method="POST"
                  )
                    div(class="form-group")
                      label(for="fullName") Họ và tên*
                      input(
                        type="text"
                        class="form-control"
                        id="fullName"
                        name="fullName"
                        required
                      )
                    div(class="form-group")
                      label(for="phone") Số điện thoại*
                      input(
                        type="text"
                        class="form-control"
                        id="phone"
                        name="phone"
                        required
                      )
                    div(class="form-group")
                      label(for="address") Địa chỉ*
                      input(
                        type="text"
                        class="form-control"
                        id="address"
                        name="address"
                        required
                      )
                    div(class="form-group")
                      button(
                        type="submit"
                        class="btn btn-success btn-block"
                      ) Đặt hàng


          button.btn.btn-success(type='button' data-toggle='modal' data-target='#myModal2') Thanh toán qua VNPay
          .modal(tabindex='-1', id='myModal2')
            .modal-dialog
              .modal-content
                .modal-header
                  h5.modal-title Thông tin người nhận hàng
                  button.close(type='button' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') &times;
                .modal-body
                  form(action="/checkout/create_payment_url" method="POST")
                    input(type="hidden" name="cartDetail" value=cartDetail)
                    input(type="hidden" name="totalPrice" value=cartDetail.totalPrice)
                    div(class="form-group")
                        label(for="fullName") Họ và tên*
                        input(
                          type="text"
                          class="form-control"
                          id="fullName"
                          name="fullName"
                          required
                        )
                    div(class="form-group")
                      label(for="phone") Số điện thoại*
                      input(
                        type="text"
                        class="form-control"
                        id="phone"
                        name="phone"
                        required
                      )
                    div(class="form-group")
                      label(for="address") Địa chỉ*
                      input(
                        type="text"
                        class="form-control"
                        id="address"
                        name="address"
                        required
                      )
                    div(class="form-group")
                      button(type="submit" class="btn btn-success btn-block") Thanh toán qua VNPay