extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
  +alert-success(2000)
  +alert-error(2000)

  .product-detail
    .container.my-5
      .row.d-flex.justify-content-center.align-items-center
        .col-6
          .inner-thumb
            img(src=product.thumbnail, alt=product.title)
        .col-6
          h3(class="inner-title") #{product.title}

          if(product.category)
            div(class="inner-category")
              span Danh mục:
              a(href=`/products/${product.category.slug}`) #{product.category.title}

          if(product.newPrice)
            div(class="inner-price-new") #{product.newPrice}$

          if(product.price)
            div(class="inner-price-old") #{product.price}$

          if(product.discountPercentage)
            div(class="inner-percent") Giảm tới: <span>#{product.discountPercentage}%</span>

          if(product.stock)
            div(class="inner-stock") Còn lại: <span>#{product.stock}</span> sản phẩm

          form(
            action=`/cart/add/${product.id}`
            method="post"

          )
            input(
              class="form-control mb-2"
              type="number"
              name="quantity"
              value="1"
              min="1"
              max=product.stock
            )
            button(
              type="submit"
              class="btn btn-success btn-block"
            ) Thêm vào giỏ hàng

      hr
      .container.my-5
        .row.justify-content-center
          .col-10
            +box-head("Mô tả sản phẩm")
            .inner-desc !{product.description}
  script(src="/js/products.js")