header
  .brand
    a(href='/')
      span.fa-solid.fa-bag-shopping
      h1 TShop
  span#menuIcon.fas.fa-bars(onclick='toggle()')
  #nav.navbar
    .searchBox
      form(action="/search" method="GET")
        input(type='text' placeholder='Tìm kiếm sản phẩm' name="keyword")
        button(type="submit")
          span#searchIcon.fa-solid.fa-magnifying-glass
    ul
      li
        a(href='/')
          span#headIcon.fas.fa-home
          | Trang chủ
      li
        a(href='/products')
          span#headIcon.fa-brands.fa-product-hunt
          | Sản phẩm
      li
        a(href='/cart')
          span#headIcon.fa-solid.fa-cart-shopping (#{miniCart ? miniCart.totalQuantity : 0})
          | Giỏ hàng
      if(user)
        li
          a(href="/user/info")
            - var lastName = user.fullName.split(' ').pop()
            span#headIcon.fa-solid.fa-user
            | #{lastName}
        li
          a(href="/user/logout")
            span#headIcon.fas.fa-sign-out
            | Đăng xuất
        li
          a(href="/chat")
            span#headIcon.fa-regular.fa-comments
            | Tin nhắn
      else
        li
          a(href="/user/login")
            span#headIcon.fa-solid.fa-user-shield
            | Đăng nhập
        li
          a(href="/user/register")
            span#headIcon.fa-solid.fa-user-plus
            | Đăng ký